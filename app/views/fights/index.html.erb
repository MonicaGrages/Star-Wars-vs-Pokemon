<h1 class="align-center">Who Would Win?</h1>

<div class='battle'>
  <div class="star-wars">
    <%= image_tag @star_war.image %>
    <h3 class="align-center"><%= @star_war.name %></h3>
    <h4 class="align-center">wins: <%= @star_war.wins %></h4>
    <%= button_to @star_war.name, update_star_wars_path(@star_war), {method: 'patch', class: "btn btn-default"}%>
  </div>

  <div class="pokemon">
    <%= image_tag @pokemon.image %>
    <h3 class="align-center"><%= @pokemon.name %></h3>
    <h4 class="align-center">wins: <%= @pokemon.wins %></h4>
    <%= button_to @pokemon.name, update_pokemons_path(@pokemon), {method: 'patch', class: "btn btn-default"}%>
  </div>
</div>

